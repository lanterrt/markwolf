<idea-plugin>
    <id>com.develangel.markwolf</id>
    <name>Markwolf</name>
    <vendor url="https://github.com/lanterrt">Moonkyu Song</vendor>

    <description><![CDATA[
    <div style="margin-bottom: 15px;">Markdown extended plugin for JetBrains IDEs</div>

    <b>[Features]</b>
    <ul>
      <li>Format Table</li>
    </ul>

    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="com.develangel.markwolf.action.markdown.FormatTableAction"
                class="com.develangel.markwolf.action.markdown.FormatTableAction" text="Markwolf: Format Table"
                description="Format markdown table">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift SEMICOLON"/>
        </action>
      <action id="com.develangel.markwolf.action.markdown.ReformatTableAction"
              class="com.develangel.markwolf.action.markdown.ReformatTableAction" text="Markwolf: Reformat Table"
              description="Reformat markdown table">
        <keyboard-shortcut keymap="$default" first-keystroke="alt SEMICOLON"/>
      </action>
      <action id="com.develangel.markwolf.action.markdown.ConvertTableAction"
              class="com.develangel.markwolf.action.markdown.ConvertTableAction" text="Markwolf: Convert Table"
              description="Convert markdown table to HTML">
        <!-- <keyboard-shortcut keymap="$default" first-keystroke="alt SEMICOLON"/> -->
      </action>
    </actions>
</idea-plugin>
